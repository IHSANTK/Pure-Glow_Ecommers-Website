<h2 style="margin-left: 10%; margin-top: 10%;">My Orders</h2>
<div class="container ">
  <div class="col-12 col-xl-9 d-flex flex-column justify-content-center" id="order-container">
    <% if (userOrders.length > 0) { %>
      <% userOrders.forEach((order, index) => { %>
        <div class="order" style="background-color: rgb(255, 255, 255); padding: 10px; margin-bottom: 15px; border: .5px solid rgb(190, 190, 190);">
          <div class="product-info d-flex justify-content-center" style="width: 100%; align-items: center;">
            <div class="product-details p-3 mt-3 bg-light" st style="width: 90%;">
              <div class="order-header">
                <p><%= new Date(order.orderDate).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></p>
              </div>
              <div class="product-infoo">
                <div class="product-image d-flex">
                  <a href="/productveiw/<%= order.products[0].productId %>">
                    <img src="<%= order.products[0].image[0] %>" alt="Product Image" style="max-width: 100px;">
                  </a>
                  <h4 class="ms-5 mt-4"><%= order.products[0].name %></h4>
                  <div class="product-description mt-4 me-5" style="margin-left: 7%;">
                    <% if (order.orderStatus === 'delivered') { %>
                      <p style="color: rgb(0, 182, 0);font-weight: 700;">Delivered</p>
                    <% } else if (order.orderStatus === 'cancelled') { %>
                      <p style="color: red;font-weight: 700;">Cancelled</p>
                    <% } else if (order.orderStatus === 'shipped') { %>
                      <p style="color: rgb(10, 158, 42);font-weight: 700;">Shipped</p>
                    <% } else { %>
                      <p style="color: orange;font-weight: 700;">Pending</p>
                    <% } %>
                    </div>
                </div>
                <% if (order.products.length > 1) { %>
                  <a class="view-details mt-2 ms-1" style="color: rgb(104, 104, 104); font-weight: 300; text-decoration: none;" onclick="toggleDetails(false)">+<%= order.products.length - 1 %> more</a>
                <% } %>
              </div>
            </div>
          </div>
          <button class="view-details-btn mt-2" style="" onclick="toggleDetails(this)">View Details</button>

                            <div class="additional-info col-12" style="display: none;">
                                <!-- Display additional order details -->
                                <% order.products.forEach(product => { %>
                                    <div class="product-info p-2 mt-2 d-flex " style="background-color: rgb(240, 240, 240); width: 100%; box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);">
                                        <div class="product-image">
                                            <a href="/productveiw/<%= product.productId %>">
                                                <img src="<%= product.image[0] %>" alt="Product Image" style="max-width: 100px;">
                                            </a>
                                        </div>
                                        <div class="product-description">
                                            <h4 class="ps-5"><%= product.name %></h4>
                                            <p class="ps-5 mt-3">Price: ₹<%= product.price %></p>
                                            
                                            <p class="ps-5 mt-3">Qty: <%= product.qty %></p>
                                            
                                        </div>
                                    </div>
                                <% }); %>

                                <p class="mt-3  text-dark" ><span style=" color: black; font-weight: 700;">Amount Payable: ₹</span><%= order.totalAmount%></p>
                                <div class="order-details">
                                <div class="d-flex" style="justify-content: space-evenly;">
                                    <div>
                                        <p class="ms-2 text-dark mt-2" style="font-weight: 600;">Order Date</p>
                                        <p class="ms-2"><%= new Date(order.orderDate).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></p>
                                    </div>
                                    <div>
                                        <p class="ms-2 text-dark mt-2" style="font-weight: 600;">Expected Delivery Date</p>
                                        <% const orderDate = new Date(order.orderDate);
                                           const expectedDeliveryDate = new Date(orderDate);
                                           expectedDeliveryDate.setDate(orderDate.getDate() + 4); %>
                                        <p class="ms-2"><%= expectedDeliveryDate.toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></p>
                                    </div>
                                    <div>
                                        <p class="ms-2 text-dark mt-2" style="font-weight: 600;">Payment Method</p>
                                        <p class="ms-2"><%= order.paymentMethod %></p>
                                    </div>
                                </div>
                                    <!-- Show order status with color -->
                                    <% if (order.orderStatus === 'delivered') { %>
                                        <p style="color: rgb(0, 182, 0);font-weight: 700; ">Delivered</p>
                                    <% } else if (order.orderStatus === 'cancelled') { %>
                                        <p style="color: red; font-weight: 700;">Cancelled</p>
                                        <p><span class="text-dark" style="font-weight: 600;">Cancel Reason:</span> <%= order.cancelReason %></p>
                                    <% } else if(order.orderStatus === 'shipped') { %>
                                        <p style="color:rgb(3, 110, 52);font-weight: 700;">Shipped</p>
                                    <% } else{%>
                                        <p style="color:orange;font-weight: 700;">Pending</p>
                                    <% } %>
                                    
                                </div>
                                <div class="address-info p-4" style="background-color: #ececec ;">
                                    
                                    <h4>Shipping Address</h4><br>
                                    <h5><%= order.shippingAddress.name %></h5>
                                    <p><i class="fas fa-map-marker-alt"></i><br><%= order.shippingAddress.address %>,
                                        <%= order.shippingAddress.city %>,
                                        <%= order.shippingAddress.district %> <br>
                                        <%= order.shippingAddress.state %>
                                        <%= order.shippingAddress.pincode %></p>
                                    <h6><i class="fas fa-phone-alt"></i> <%= order.shippingAddress.phone %></h6>
                                </div>
                                <% if (order.orderStatus !== 'delivered' && order.orderStatus !== 'cancelled') { %>
                                    <!-- Display cancellation form and download invoice button -->
                                    <form id="cancelForm" class="cancel-form" action="/cancellreson/<%= order.orderID %>" method="post">
                                        <div class="form-group">
                                            <label for="cancelReasonSelect" class="text-dark" style="font-weight: 600;">Cancel Product</label>
                                            <select class="form-control" id="cancelReasonSelect" name="cancelReason" required>
                                                <option selected disabled>Select a reason</option>
                                                <option value="size Not Match">Different variant</option>
                                                <option value="Change My Mind">Change My Mind</option>
                                                <option value="Product Damages">Product Damage</option>
                                                <!-- Add more reasons as needed -->
                                            </select>
                                        </div>
                                        <!-- Error message container -->
                                        <div id="errorMessage" style="display: none; color: red;">Please select a reason before submitting.</div>
                                        <button type="submit" class="btn btn-white" onclick="return validateForm()">Cancel</button>
                                    </form>
                                <% } %>
                                <% if (order.orderStatus !== 'cancelled') { %>
                                <form action="/downloadinvoice/<%= order.orderID %>" method="post">
                                    <button type="submit" class="btn bg-success text-light mt-2">Get Invoice</button>
                                </form>
                                    <!-- Display all product details -->
                               <% } %>     
                               
                            </div>
                            
                        </div>
                    <% }); %>
                <% } else { %>
                    <a  class="btn border-secondary rounded-pill py-3 px-5  mt-3 w-25" href="/shop">Shop Now</a>
                <% } %>
            </div>
</div>
</div>
