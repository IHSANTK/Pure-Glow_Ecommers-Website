<h2 id="h2">My Orders</h2>
<div class="container">
    <div class="col-12 col-xl-9 d-flex flex-column justify-content-center" id="order-container">
        <% if (userOrders.length > 0) { %>
            <% userOrders.forEach((order, index) => { %>
                <% order.products.forEach((product) => { %>
                    <div class="order" style="background-color: rgb(255, 255, 255); padding: 10px; margin-bottom: 15px; border: .5px solid rgb(190, 190, 190);">
                        <div class="product-info d-flex justify-content-center" style="width: 100%; align-items: center;">
                            <div class="product-details p-3 mt-3 bg-light" style="width: 95%;">
                                <div class="order-header"></div>
                                <div class="product-infoo">
                                    <div class="product-image d-flex">
                                        <a href="/productveiw/<%= product.productId %>">
                                            <img src="<%= product.image[0] %>" alt="Product Image" id="image" style=" max-width: 80px;">
                                        </a>
                                        <h4 class="textmaindiv"><%= product.name %></h4>
                                        <p class="textmaindiv2" id="maindivtext" style="margin-left: 13%;"><%= new Date(order.orderDate).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="view-details-btn mt-2" onclick="toggleDetails(this)">View Details</button>

                        <div class="additional-info col-12" style="display: none;">
                            <div class="product-info p-2 mt-2 d-flex  " style=" justify-content: space-evenly;  background-color: rgb(240, 240, 240); width: 100%; box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);">
                                <div class="product-image">
                                    <a href="/productveiw/<%= product.productId %>">
                                        <img src="<%= product.image[0] %>" alt="Product Image" id="image2" style="">
                                    </a>
                                </div>
                                <div >
                                    <h4 class=""><%= product.name %></h4>
                                    <p class="">Price: ₹<%= product.price %></p>
                                    <p class="">Qty: <%= product.qty %></p>
                                </div>
                               
                            </div>
                            <div class="product-description mt-3" style="margin-left: 2%;">
                                <% if (product.orderStatus === 'delivered') { %>
                                    <p style="color: rgb(0, 182, 0);font-weight: 700;">Delivered</p>
                                <% } else if (product.orderStatus === 'cancelled') { %>
                                    <p style="color: red;font-weight: 700;">Cancelled</p>
                                    <p style="color: rgb(0, 0, 0);font-weight: 700;"><%= product.cancelReason %></p>
                                <% } else if (product.orderStatus === 'shipped') { %>
                                    <p style="color: rgb(10, 158, 42);font-weight: 700;">Shipped</p>
                                <% } else { %>
                                    <p style="color: orange;font-weight: 700;">Pending</p>
                                <% } %>
                            </div>
                            <p class="mt-3  text-dark"><span style="color: black; font-weight: 700;margin-left: 2%;">Amount Payable: ₹</span><%= product.price*product.qty %></p>
                            <div class="order-details">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <p class="ms-2 text-dark mt-2" style="font-weight: 600;">Order Date</p>
                                        <p class="ms-2"><%= new Date(order.orderDate).toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></p>
                                    </div>
                                    <div>
                                        <p class="ms-2 text-dark mt-2" style="font-weight: 600;">Expected Delivery Date</p>
                                        <% const orderDate = new Date(order.orderDate);
                                           const expectedDeliveryDate = new Date(orderDate);
                                           expectedDeliveryDate.setDate(orderDate.getDate() + 4); %>
                                        <p class="ms-2"><%= expectedDeliveryDate.toLocaleDateString('en-US', { month: 'short', day: '2-digit', year: 'numeric' }) %></p>
                                    </div>
                                    <div>
                                        <p class="ms-2 text-dark mt-2" style="font-weight: 600;">Payment Method</p>
                                        <p class="ms-2"><%= order.paymentMethod %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="address-info p-4" style="background-color: #ececec;">
                                <h4>Shipping Address</h4><br>
                                <h5><%= order.shippingAddress.name %></h5>
                                <p><i class="fas fa-map-marker-alt"></i><br><%= order.shippingAddress.address %>,
                                    <%= order.shippingAddress.city %>,
                                    <%= order.shippingAddress.district %> <br>
                                    <%= order.shippingAddress.state %>
                                    <%= order.shippingAddress.pincode %></p>
                                <h6><i class="fas fa-phone-alt"></i> <%= order.shippingAddress.phone %></h6>
                            </div>
                            <% if (product.orderStatus !== 'delivered' && product.orderStatus !== 'cancelled') { %>
                                <form action="/cancellreson/<%= product.productId %>/<%= order.orderID %>" method="post" class="d-flex">
                                    <div class="form-group flex-grow-1">
                                        <button type="submit" class="btn btn-white " onclick="return validateForm()">Cancel</button>
                                        <select class="form-control w-50" id="cancelReasonSelect" name="cancelReason" required>
                                            <option selected disabled>Select a reason</option>
                                            <option value="size Not Match">Different variant</option>
                                            <option value="Change My Mind">Change My Mind</option>
                                            <option value="Product Damages">Change Paymentmethord</option>
                                            <!-- Add more reasons as needed -->
                                        </select>
                                    </div>
                                    <div class="" style="margin-top: 30px;">
                                        <!-- Error message container -->
                                        <div id="errorMessage" style="display: none; color: red;">Please select a reason before submitting.</div>
                                    </div>
                                </form>
                            <% } %>
                            <% if (product.orderStatus !== 'cancelled') { %>
                                <form action="/downloadinvoice/<%= order.orderID %>/<%= product.productId %>" method="post">
                                    <button type="submit" class="btn bg-success text-light mt-2">Get Invoice</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% }); %>
        <% } else { %>
            <a class="btn border-secondary rounded-pill py-3 px-5 mt-3 w-25" href="/shop">Shop Now</a>
        <% } %>
    </div>
</div>

  
