<script>
    function validateForm() {
        console.log("hloooo");
        var reason = document.getElementById("cancelReasonSelect").value;
        if (reason === "" || reason === null) {
            document.getElementById("errorMessage").style.display = "block";
            return false; // Prevent form submission
        }
        return true; 
    }
</script>
<script>
    function toggleDetails(button) {
        const additionalInfo = button.parentElement.querySelector('.additional-info');
        const productDetails = button.parentElement.querySelector('.product-details');
        if (additionalInfo.style.display === 'none') {
            additionalInfo.style.display = 'block';
            productDetails.style.display = 'none'; // Hide product details
            button.innerText = 'Hide Details';
        } else {
            additionalInfo.style.display = 'none';
            productDetails.style.display = 'block'; // Show product details
            button.innerText = 'View Details';
        }
    }
</script>
